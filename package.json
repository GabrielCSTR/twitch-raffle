{
    "name": "root",
    "repository": "git@github.com:modernweb-pl/vue-nest-monorepo.git",
    "author": "ModernWeb <biuro@modernweb.pl>",
    "workspaces": [
      "apps/*"
    ],
    "private": true,
    "scripts": {
      "api": "yarn workspace api",
      "web": "yarn workspace web",
      "build": "concurrently -n \"api,web\" \"yarn api build\" \"yarn web build\"",
      "start": "concurrently -k \"yarn api start:dev\" \"yarn web start:dev\"",
      "format": "yarn lint --fix && prettier --write **/*.{html,scss,json}",
      "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue"
    },
    "devDependencies": {
      "@typescript-eslint/eslint-plugin": "~2.23.0",
      "@typescript-eslint/parser": "~2.23.0",
      "concurrently": "~5.1.0",
      "eslint": "~6.8.0",
      "eslint-config-prettier": "~6.10.1",
      "eslint-plugin-prettier": "~3.1.2",
      "lerna": "~3.20.2",
      "lint-staged": "~10.0.8",
      "prettier": "~2.0.1",
      "yorkie": "~2.0.0"
    },
    "gitHooks": {
      "pre-commit": "lint-staged"
    },
    "lint-staged": {
      "*.{html,scss,json}": [
        "prettier --write"
      ],
      "*.{js,jsx,ts,tsx,vue}": [
        "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix"
      ]
    }
  }